{
  "name": "SignalWire Webhook",
  "description": "Automated webhook for SignalWire balance checking calls",
  "image": "https://img.shields.io/badge/SignalWire-Webhook-blue",
  "repository": "https://github.com/MFxLEGEND/signalwire-balance-checker",
  "source": "cloud-webhook",
  "services": [
    {
      "name": "signalwire-webhook",
      "plan": "hobby",
      "environment": {
        "FLASK_ENV": "production",
        "PORT": "5000",
        "RAILWAY_TOKEN": "6ce3ddc0-6d5c-41c8-9c16-dac5ba47b7a9"
      },
      "build": {
        "command": "pip install -r requirements.txt"
      },
      "start": {
        "command": "gunicorn main:app --host 0.0.0.0 --port $PORT"
      },
      "healthcheck": {
        "path": "/health",
        "interval": 30
      }
    }
  ]
} 